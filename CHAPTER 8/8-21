<!DOCTYPE html>
<html>
    <head>
        <title>8-21 예제</title>
        <meta charset="UTF-8">
        <style>
            table { border-collapse: collapse; }
            td { border: 1px solid black; width: 50px; height: 50px; }
        </style>
    </head>
    <body>
        <script type="text/javascript"> 
            var rows = prompt("행 수를 입력하세요.");
            var columns = prompt("열 수를 입력하세요.");
            document.write("<table border='1'>");
            for(var i=0; i<rows; i++){
                document.write("<tr>");
                for(var j=0; j<columns; j++){
                    document.write("<td>");
                    document.write(i+", "+j);
                    document.write("</td>");
                }
                document.write("</tr>");
            }
            document.write("</table>");
        </script>
    </body>
</html>
